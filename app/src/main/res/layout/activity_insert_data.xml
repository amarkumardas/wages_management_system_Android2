<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.InsertPersonDetailsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECB102">
<!--    android:id="@+id/insert_detailsof_l_m_g"> error scroll view cant host id-->
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/insert_detailsof_l_m_g">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#D6DADF">

        <Button
            android:layout_marginStart="6dp"
            android:layout_marginBottom="6dp"
            android:layout_width="35dp"
            android:layout_height="27dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/baseline_arrow_goback"
            android:layout_marginLeft="5dp"
            android:onClick="go_back"
            android:foreground="?android:attr/selectableItemBackground"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_details"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="155dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageview"
        android:src="@drawable/defaultprofileimage"
        android:scaleType="fitXY"
        android:foreground="?android:attr/selectableItemBackground"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_name"
        android:textSize="12dp"
        android:layout_marginLeft="26dp"
        android:textColor="@color/black"
        android:layout_marginTop="1dp"
        android:textAllCaps="false"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/white_detailsbg"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:inputType="textCapCharacters"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/name_et"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ACTIVE PHONE NUMBER 1"
            android:textSize="12dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="PHONE NUMBER 2"
            android:textSize="12dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp">

        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/white_detailsbg"
            android:paddingLeft="7dp"
            android:textStyle="bold"
            android:singleLine="true"

            android:textSize="17dp"
            android:maxLength="10"
            android:textColor="@color/purple_700"
            android:inputType="number"
            android:digits="1234567890"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/phonenumber_et"/>

        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/white_detailsbg"
            android:paddingLeft="7dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:textSize="17dp"
            android:maxLength="10"
            android:textColor="@color/purple_700"
            android:inputType="number"
            android:digits="1234567890"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/acholder_et"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="LOCATION"
            android:textSize="12dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="RELIGION"
            android:textSize="12dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp">
        <AutoCompleteTextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="25dp"

            android:layout_marginRight="4dp"
            android:background="@drawable/white_detailsbg"
            android:paddingLeft="7dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:inputType="textCapCharacters"
            android:id="@+id/location_autoComplete_tv"
            android:completionThreshold="1"
            android:dropDownWidth="300dp"
            android:foreground="?android:attr/selectableItemBackground"
            />

        <AutoCompleteTextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="4dp"

            android:layout_marginRight="25dp"
            android:background="@drawable/white_detailsbg"
            android:paddingLeft="7dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:inputType="textCapCharacters"
            android:id="@+id/religion_autoComplete_tv"
            android:completionThreshold="1"
            android:dropDownWidth="300dp"
            android:foreground="?android:attr/selectableItemBackground"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_aadhaar_card_number"
        android:textSize="12dp"
        android:layout_marginLeft="26dp"
        android:textColor="@color/black"
        android:layout_marginTop="19dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/white_detailsbg"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:singleLine="true"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:maxLength="12"
        android:id="@+id/aadharcard_et"
        android:foreground="?android:attr/selectableItemBackground"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BANK NAME"
        android:textSize="12dp"
        android:layout_marginLeft="26dp"
        android:textColor="@color/black"
        android:layout_marginTop="19dp" />
    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/white_detailsbg"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:singleLine="true"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:inputType="textCapCharacters"
        android:id="@+id/bankname_autocomplte_tv"
        android:completionThreshold="1"
        android:dropDownWidth="300dp"
        android:foreground="?android:attr/selectableItemBackground"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="A/C NUMBER"
            android:textSize="12dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="IFSC CODE"
            android:textSize="12dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="1dp"
        android:layout_gravity="center_horizontal">
        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/white_detailsbg"
            android:paddingLeft="7dp"
            android:textStyle="bold"
            android:singleLine="true"

            android:textSize="17dp"
            android:maxLength="20"
            android:textColor="@color/purple_700"
            android:inputType="number"
            android:digits="1234567890"
            android:id="@+id/accountno_et"
            android:foreground="?android:attr/selectableItemBackground"/>

        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/white_detailsbg"
            android:paddingLeft="7dp"
            android:textStyle="bold"
            android:singleLine="true"

            android:textSize="17dp"
            android:maxLength="11"
            android:textColor="@color/black"
            android:inputType="textCapCharacters"
            android:id="@+id/ifsccode_et"
            android:foreground="?android:attr/selectableItemBackground"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/account_holder_name"
        android:textSize="12dp"
        android:layout_marginLeft="26dp"
        android:textColor="@color/black"
        android:layout_marginTop="19dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/white_detailsbg"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:singleLine="true"
        android:inputType="textCapCharacters"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:id="@+id/fathername_et"
        android:foreground="?android:attr/selectableItemBackground"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:weightSum="3"
        android:id="@+id/skill_radiogp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mestre"
            android:paddingRight="30dp"
            android:layout_weight="1"
            android:id="@+id/mestre"
            android:textStyle="bold"
            android:textSize="17dp"
            android:foreground="?android:attr/selectableItemBackground"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/laber"
            android:paddingRight="30dp"
            android:layout_weight="1"
            android:id="@+id/laber"
            android:textStyle="bold"
            android:textSize="17dp"
            android:foreground="?android:attr/selectableItemBackground"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/women_laber"
            android:paddingRight="30dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:id="@+id/women_laber"
            android:textSize="17dp"
            android:foreground="?android:attr/selectableItemBackground"
            />
    </RadioGroup>

    <Button
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/dark_blue_buttonbg"
        android:onClick="insert_click"
        android:text="@string/insert_data"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="15sp"
        android:id="@+id/add_button"
        android:foreground="?android:attr/selectableItemBackground"/>

</LinearLayout>
</ScrollView>