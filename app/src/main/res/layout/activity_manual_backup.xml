<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ManualBackupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background">
    <Button
        android:layout_marginTop="11dp"
        android:layout_alignParentStart="true"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:layout_marginStart="10dp"

        android:background="@drawable/baseline_arrow_goback"
        android:foreground="?android:attr/selectableItemBackground"/>
        <TextView
            android:layout_marginTop="11dp"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACKUP YOUR DATA"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="50dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/backup_setting"
            android:layout_marginTop="11dp"
            android:layout_alignParentEnd="true"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:background="@drawable/baseline_settings_suggest_24"
            android:textSize="20sp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_vertical"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 WAYS FOR BACKUP"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:text="1.Backup Each File"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/backup_each_file"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="(Last Backup: 24-05-2044 at 09:05 am)"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:paddingTop="1dp"
            android:layout_marginStart="5dp"
            android:id="@+id/backup_each_file_last_backup"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select File Type"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="8dp"
        android:textSize="10sp"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:weightSum="3"
        android:id="@+id/backup_radiogp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PDF"
            android:layout_weight="1"
            android:id="@+id/backup_pdf"
            android:textSize="12sp"
            android:foreground="?android:attr/selectableItemBackground" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEXT"
            android:layout_weight="1"
            android:id="@+id/backup_text"
            android:textSize="12sp"
            android:foreground="?android:attr/selectableItemBackground"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXCEL"
            android:layout_weight="1"
            android:id="@+id/backup_excel"
            android:textSize="12dp"
            android:foreground="?android:attr/selectableItemBackground"
            />
    </RadioGroup>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">
    <Button
        android:id="@+id/backup_active_skill_mlg"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:textSize="13dp"
        android:text="Active Skill M L G"
        android:textAllCaps="false"
        android:foreground="?android:attr/selectableItemBackground"/>
        <TextView
            android:id="@+id/backup_active_skill_mlg_green_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_green_sharp_done_sharp_tick_20"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">
    <Button
        android:id="@+id/backup_inactive_skill_m"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:textSize="13dp"
        android:text="InActive Skill M"
        android:textAllCaps="false"
        android:foreground="?android:attr/selectableItemBackground"/>
        <TextView
            android:id="@+id/backup_inactive_skill_m_green_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_green_sharp_done_sharp_tick_20"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">
    <Button
        android:id="@+id/backup_inactive_skill_l"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="InActive Skill L"
        android:textSize="13dp"
        android:textAllCaps="false"
        android:foreground="?android:attr/selectableItemBackground"/>
        <TextView
            android:id="@+id/backup_inactive_skill_l_green_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_green_sharp_done_sharp_tick_20"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">
    <Button
        android:id="@+id/backup_inactive_skill_g"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:textSize="13dp"
        android:text="InActive Skill G"
        android:textAllCaps="false"
        android:foreground="?android:attr/selectableItemBackground"/>
        <TextView
            android:id="@+id/backup_inactive_skill_g_green_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_green_sharp_done_sharp_tick_20"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>