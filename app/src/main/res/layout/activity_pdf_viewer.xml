<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    android:orientation="vertical"
    tools:context=".activity.PdfViewerOperation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:layout_marginStart="6dp"
            android:layout_marginBottom="6dp"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:background="@drawable/baseline_arrow_goback"
            android:id="@+id/goback_pdf_viewer"
            android:foreground="?android:attr/selectableItemBackground"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/pdf1_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LAST INVOICE2"
                android:textSize="13sp"
                android:textStyle="bold"
                android:background="@drawable/white_detailsbg"
                android:foreground="?android:attr/selectableItemBackground"/>

            <Button
                android:id="@+id/pdf2_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LAST INVOICE1"
                android:textSize="13sp"
                android:textStyle="bold"
                android:background="@drawable/white_detailsbg"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:foreground="?android:attr/selectableItemBackground"/>

            <Button
                android:id="@+id/current_pdf_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CURRENT INVOICE"
                android:textSize="13sp"
                android:textStyle="bold"
                android:background="@drawable/white_detailsbg"
                android:foreground="?android:attr/selectableItemBackground"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <Spinner
                android:id="@+id/text_share"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/white_detailsbg"
                android:textColor="@color/black"

                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:foreground="?android:attr/selectableItemBackground"/>

            <Button
                android:id="@+id/download_pdf_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/green_color_bg"
                android:text="DOWNLOAD"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:foreground="?android:attr/selectableItemBackground"/>

            <Button
                android:id="@+id/share_pdf_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/green_color_bg"
                android:text="SHARE INVOICE"
                android:textStyle="bold"
                android:textSize="13sp"
                android:foreground="?android:attr/selectableItemBackground"/>
        </LinearLayout>

    </LinearLayout>
