<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

           <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="@string/set_rate"
            android:paddingTop="1dp"
            android:background="@color/purple_700"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"/>

    <TextView
        android:layout_marginTop="12dp"
        android:id="@+id/indicator_of_default_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:padding="10dp"
        android:textAlignment="center"
        android:text="@string/save_time_by_setting_default_rate"
        android:textColor="@color/black"
        android:textSize="14dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:weightSum="8"
        android:padding="2dp"
        android:background="@color/background"
        android:id="@+id/hardcode_meta_layout">

        <TextView
            android:id="@+id/hardcoded_p1_tv_rate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="12dp"/>

        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textStyle="bold"
            android:textSize="12dp"
            android:id="@+id/hardcoded_p2_tv_rate"/>
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="12dp"
            android:id="@+id/hardcoded_p3_tv_rate"/>

        <TextView
            android:id="@+id/hardcoded_p4_tv_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textStyle="bold"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="2dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:id="@+id/input_layout_meta"
        android:weightSum="8"
        android:padding="2dp"
        android:background="@color/background">

        <EditText
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/white_detailsbg"
            android:textStyle="bold"
            android:hint="@string/rate"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:singleLine="true"
            android:maxLength="5"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:inputType="numberDecimal"
            android:id="@+id/input_p1_et_rate"
            android:foreground="?android:attr/selectableItemBackground">
        </EditText>
        <EditText
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/white_detailsbg"
            android:textStyle="bold"
            android:maxLength="5"
            android:hint="@string/rate"
            android:singleLine="true"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:inputType="numberDecimal"
            android:id="@+id/input_p2_et_rate"
            android:foreground="?android:attr/selectableItemBackground"/>
        <EditText
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/white_detailsbg"
            android:textStyle="bold"
            android:maxLength="5"
            android:hint="@string/rate"
            android:singleLine="true"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:inputType="numberDecimal"
            android:id="@+id/input_p3_et_rate"/>
        <EditText
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/white_detailsbg"
            android:textStyle="bold"
            android:hint="@string/rate"
            android:maxLength="5"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="2dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:inputType="numberDecimal"
            android:id="@+id/input_p4_et_rate"
            android:foreground="?android:attr/selectableItemBackground"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="4dp"
        android:orientation="horizontal"
        android:weightSum="6">
        <Button
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/cancel"
            android:textSize="15dp"
            android:textColor="#FF0000"
            android:textAlignment="center"
            android:background="@drawable/graycolor_bg"
            android:id="@+id/cancel_btn_rate"
            android:foreground="?android:attr/selectableItemBackground"/>
        <Button
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/green_color_bg"
            android:id="@+id/save_btn_rate"
            android:foreground="?android:attr/selectableItemBackground"/>
    </LinearLayout>

</LinearLayout>