<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.history.HistoryFragment"
    android:background="#D6DADF">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/historyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history"
            android:paddingStart="6dp"
            android:layout_marginTop="11dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:layout_alignParentStart="true"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/history_toggleToShare"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="false"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="115dp"

            android:layout_alignParentRight="true"/>
        <Spinner
            android:id="@+id/history_setting_spinner"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="67dp"
            android:background="@drawable/baseline_manage_history_24"
            android:layout_gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:foreground="?android:attr/selectableItemBackground"/>
        <TextView
            android:id="@+id/history_share_pdf_or_textfile_Icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/baseline_file_open_24"
            android:foreground="?android:attr/selectableItemBackground"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="4dp"
        android:background="@drawable/round_background">
        <TextView
            android:id="@+id/history_minus_one_tv"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginStart="25dp"
            android:layout_gravity="center_vertical"
            android:foreground="?android:attr/selectableItemBackground"
            android:drawableStart="@drawable/baseline_arrow_back_ios_new_24"/>

        <TextView
            android:id="@+id/history_date_view_tv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="8"
            android:paddingTop="12dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:foreground="?android:attr/selectableItemBackground"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/history_plus_one_tv"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginEnd="25dp"
            android:layout_gravity="center_vertical"
            android:foreground="?android:attr/selectableItemBackground"
            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_detailsbg"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="0dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:textAlignment="center"
            android:text="@string/total_payment"
            android:textSize="12sp"
             />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:paddingTop="4dp"
            android:textAlignment="center"
            android:text="@string/total_amount_received"
            android:layout_height="25dp"
            android:textSize="12sp"
              />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:background="@drawable/grey_line_bg_forlayout"
            android:id="@+id/history_total_payment"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:paddingTop="4dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:foreground="?android:attr/selectableItemBackground"/>
        <TextView
            android:background="@drawable/grey_line_bg_forlayout"
            android:layout_weight="1"
            android:textStyle="bold"

            android:paddingTop="4dp"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textColor="@color/green"
            android:textSize="13sp"
            android:id="@+id/history_total_amount_received"
            android:foreground="?android:attr/selectableItemBackground"/>
    </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="12sp"
        android:background="@drawable/white_detailsbg"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:paddingTop="4dp"
        android:paddingStart="5dp"
        android:id="@+id/history_total_worked_people"
        android:layout_marginBottom="5dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/history_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/history_single_row"
        android:background="#D6DADF"
        android:paddingBottom="60dp"
        android:foreground="?android:attr/selectableItemBackground">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
