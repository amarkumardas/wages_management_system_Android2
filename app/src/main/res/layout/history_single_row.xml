<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:padding="1dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/white_detailsbg"
    android:orientation="horizontal"
    android:foreground="?android:attr/selectableItemBackground"
    android:weightSum="15">

    <LinearLayout
        android:layout_weight="14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:weightSum="22">

        <TextView
            android:id="@+id/history_name_tv"
            android:layout_weight="14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="AMAR KUMAR DAS AMAR KUMAR DAS"
            android:textSize="13sp"

            android:background="@drawable/light_gray_color_bg"
            android:textColor="@color/black"
            android:paddingBottom="1dp"
            />

        <TextView
            android:text="M"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"

            android:textSize="10sp"
            android:id="@+id/history_p1_skill_tv"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/history_p2_skill_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="L"
            android:textAlignment="center"

            android:textSize="10sp"

            tools:ignore="RtlCompat" />
        <TextView
            android:text="G"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"

            android:textSize="10sp"
            android:id="@+id/history_p3_skill_tv"
            tools:ignore="RtlCompat" />
        <TextView
            android:text="M"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"

            android:textSize="10sp"
            android:id="@+id/history_p4_skill_tv"
            tools:ignore="RtlCompat" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:weightSum="22">

    <TextView
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="13-1-2023"
        android:textSize="14dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/history_date_tv"
        />
    <Spinner
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@drawable/black_sharp_mic_24"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:id="@+id/history_mic_spinner"
        android:foreground="?android:attr/selectableItemBackground"
        />

    <TextView
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="999999999"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/history_wages_or_deposit_tv"
        />
    <TextView
        android:text="6"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"

        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/history_p1_tv"
         />
    <TextView
        android:text="999"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"

        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/history_p2_tv"
       />

    <TextView
        android:id="@+id/history_p3_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        android:layout_weight="2"
        android:text="7"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
          />
    <TextView
        android:text="3"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"

        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/history_p4_tv"/>
   </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_weight="1"
        android:background="@drawable/baseline_share_24"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>
</LinearLayout>