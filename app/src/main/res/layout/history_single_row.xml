<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:padding="1dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/white_detailsbg"
    android:orientation="horizontal"
    android:foreground="?android:attr/selectableItemBackground"
    android:weightSum="30">

    <LinearLayout
        android:layout_weight="30"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/history_updated_amount_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:paddingBottom="1dp"
            android:layout_marginStart="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:weightSum="22">

        <TextView
            android:id="@+id/history_name_tv"
            android:layout_weight="14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingBottom="1dp"
            android:layout_marginStart="2dp"/>

        <TextView

            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:textSize="10sp"
            android:id="@+id/history_p1_skill_tv"
            tools:ignore="RtlCompat"/>

        <TextView
            android:id="@+id/history_p2_skill_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:textSize="10sp"
            tools:ignore="RtlCompat"/>
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:textSize="10sp"
            android:id="@+id/history_p3_skill_tv"
            tools:ignore="RtlCompat" />
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:textSize="10sp"
            android:id="@+id/history_p4_skill_tv"
            tools:ignore="RtlCompat" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="22">
    <TextView
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:textSize="14dp"
        android:layout_marginStart="2dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/history_user_date_tv"
        />
    <Spinner
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@drawable/black_sharp_mic_24"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:id="@+id/history_mic_spinner"
        android:foreground="?android:attr/selectableItemBackground"/>

    <TextView
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"

        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:background="@drawable/light_gray_color_bg"
        android:id="@+id/history_wages_or_deposit_tv"
        tools:ignore="RtlCompat" />
    <TextView

        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"

        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/history_p1_tv"
         />
    <TextView

        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"

        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/history_p2_tv"
       />

    <TextView
        android:id="@+id/history_p3_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_weight="2"

        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
          />
    <TextView
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/history_p4_tv"/>
   </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/history_share_tv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="6dp"
        android:background="@drawable/baseline_share_24" />
</LinearLayout>