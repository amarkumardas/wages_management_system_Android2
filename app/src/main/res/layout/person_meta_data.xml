<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="@string/person_info"
                android:paddingTop="1dp"
                android:background="@color/purple_700"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"
                />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:id="@+id/skill_radiogp_metadata">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activate"
                android:id="@+id/active_metadata"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textSize="17dp"
                android:foreground="?android:attr/selectableItemBackground"
                />
        </RadioGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="8"
            android:background="#D6DADF"
            android:id="@+id/hardcode_meta_layout">

            <TextView
                android:id="@+id/hardcoded_p1_tv_meta"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10dp"
                  />

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"

                android:textSize="10dp"
                android:id="@+id/hardcoded_p2_tv_meta"/>
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"

                android:textColor="@color/black"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:textSize="10dp"
                android:id="@+id/hardcoded_p3_tv_meta"/>

            <TextView
                android:id="@+id/hardcoded_p4_tv_meta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"

                android:layout_marginRight="3dp"
                android:layout_marginLeft="2dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10dp"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:id="@+id/input_layout_meta"
            android:weightSum="8"
            android:background="#D6DADF">
<!--            <TextView-->
<!--                android:layout_weight="2"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textAlignment="center"-->
<!--                android:textColor="@color/black"-->
<!--                android:text="@string/rate_equal"-->
<!--                android:textSize="10sp"-->
<!--                />-->
            <EditText
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/white_detailsbg"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:hint="@string/rate"
                android:singleLine="true"
                android:maxLength="5"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:inputType="numberDecimal"
                android:id="@+id/input_p1_et_meta"
                android:foreground="?android:attr/selectableItemBackground">
            </EditText>
            <EditText
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/white_detailsbg"
                android:textStyle="bold"
                android:maxLength="5"
                android:singleLine="true"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:textAlignment="center"
                android:hint="@string/rate"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:inputType="numberDecimal"
                android:id="@+id/input_p2_et_meta"
                android:foreground="?android:attr/selectableItemBackground"/>
            <EditText
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/white_detailsbg"
                android:textStyle="bold"
                android:maxLength="5"
                android:singleLine="true"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:hint="@string/rate"
                android:textSize="20dp"
                android:inputType="numberDecimal"
                android:id="@+id/input_p3_et_meta"/>
            <EditText
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/white_detailsbg"
                android:textStyle="bold"
                android:maxLength="5"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="2dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:hint="@string/rate"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:inputType="numberDecimal"
                android:id="@+id/input_p4_et_meta"
                android:foreground="?android:attr/selectableItemBackground"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:weightSum="9"
            android:background="#D6DADF">

            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="@string/leaving_date"
                android:textSize="10dp"
                />
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="@string/returning_date"
                android:textSize="10dp"
                 android:id="@+id/returning_date_hardcoded_text_metadata"
                android:layout_marginRight="2dp"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
               />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/date_mic_chronometer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:weightSum="9"
            android:background="@drawable/border_outline_while_bg">

            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/white_detailsbg"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingTop="8dp"

                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:id="@+id/leaving_dateTv_metadata"
                android:foreground="?android:attr/selectableItemBackground"/>
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/white_detailsbg"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingTop="8dp"
                android:layout_marginRight="2dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:id="@+id/returning_dateTv_metadata"
                android:foreground="?android:attr/selectableItemBackground"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="X"
                android:textStyle="bold"
                android:textColor="#FF0000"
                android:textAlignment="center"
                android:id="@+id/eraseDate_tv_metadata"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:weightSum="5"
            android:background="#D6DADF">


            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:text="@string/add_remove_m_l_g"
                android:textSize="10dp"
                />
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginRight="2dp"
                android:text="@string/total_worked_days"
                android:textSize="10dp"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginRight="2dp"
                android:text="@string/star"
                android:textSize="10dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/this_week_work_amount_layout"
            android:background="@drawable/border_outline_while_bg"
            android:orientation="horizontal"
            android:padding="4dp"
            android:weightSum="5">

            <Spinner
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/white_detailsbg"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/custom_spinner_remove_or_add_mlg"
                android:foreground="?android:attr/selectableItemBackground"/>
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/white_detailsbg"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingTop="8dp"
                android:layout_marginRight="2dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:id="@+id/total_work_days_metadata"/>
            <Spinner
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/white_detailsbg"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/starSpinner_metadata"
                android:foreground="?android:attr/selectableItemBackground"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:weightSum="2"
            android:background="#D6DADF">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:text="@string/location"
                android:textSize="10dp"
                />


            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="@string/religion"
                android:textSize="10dp"
                android:layout_marginRight="2dp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                   android:padding="4dp"
                   android:weightSum="2"
                   android:background="@drawable/border_outline_while_bg">
                    <AutoCompleteTextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="2dp"

                        android:layout_marginRight="2dp"
                        android:background="@drawable/white_detailsbg"
                        android:paddingLeft="7dp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:inputType="textCapCharacters"
                        android:id="@+id/location_autocomplete_tv_meta"
                        android:completionThreshold="1"
                        android:dropDownWidth="300dp"
                        />

                    <AutoCompleteTextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:layout_marginRight="2dp"
                        android:background="@drawable/white_detailsbg"
                        android:paddingLeft="7dp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:inputType="textCapCharacters"
                        android:id="@+id/religion_autoComplte_tv_meta"
                        android:completionThreshold="1"
                        android:dropDownWidth="300dp"
                        />
                </LinearLayout>
