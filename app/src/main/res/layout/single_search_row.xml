<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_margin="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/single_row_cartview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:padding="1dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/search_id_tv"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:text="ID: 12345678910"
                android:textSize="16sp"
                android:layout_marginRight="2dp"
                android:layout_gravity="end"
                android:background="#FFE928"
                android:textColor="#000000"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/search_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAME:AMAR KUMAR DAS"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="2dp"/>
            <TextView
                android:id="@+id/search_father_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FATHER:RAJARAMDAS"
                android:textSize="15sp"
                android:padding="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                >
                <TextView
                    android:id="@+id/search_ac_tv"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="A/C:     123456 "
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="2dp"
                    />
                <TextView
                    android:id="@+id/search_aadhar_tv"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="AADHAR:     12345"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                     />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
